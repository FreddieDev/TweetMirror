{
    "@type": "MessageCard",
    "@context": "https://schema.org/extensions",
    "title": "XXX Tweeted:",
    "summary": "XXX shared a Tweet",
    "themeColor": "8000e8",
    "potentialAction": [
        {
            "@type": "OpenUri",
            "name": "View on Twitter",
            "targets": [
                {
                    "os": "default",
                    "uri": "https://twitter.com/"
                }
            ]
        },
		{
            "@type": "OpenUri",
            "name": "Copy Tweet",
            "targets": [
                {
                    "os": "default",
                    "uri": "https://twitter.com/intent/tweet?text=hello%20world"
                }
            ]
        }
    ],
    "sections": [
        {
            "text": "Hello world #TweetMirror"
        }
    ]
}